<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="CarTradingUnlimited.ViewNewVehicles"
	x:Name="Page"
	WindowTitle="Page"
	FlowDirection="LeftToRight"
	Width="640" Height="462"
	WindowWidth="640" WindowHeight="480">

	<Grid x:Name="LayoutRoot">
		<DockPanel LastChildFill="False" Margin="310,0,0,0">
			<Frame x:Name="NVehicle_page" Width="330" />
		</DockPanel>
		<DockPanel LastChildFill="False" Margin="0,0,334,0">
			<TextBlock TextWrapping="Wrap" DockPanel.Dock="Top" FontSize="26.667" Foreground="#FF1A1C78" TextAlignment="Center" FontWeight="Bold" FontStyle="Italic" TextDecorations="Underline"><Run Language="en-za" Text="NEW VEHICLE DETAILS"/></TextBlock>
			<DataGrid x:Name="DGV_NewCars" Margin="8,5,8,0" VerticalAlignment="Top" DockPanel.Dock="Top" Background="{x:Null}" RowBackground="#FF1A1C78" BorderBrush="Black" Height="246" SelectionChanged="DGV_NewCars_SelectionChanged" Foreground="#FFE40C0C"/>
			<GroupBox Header="Search new vehicles:" Margin="8,0,0,0" FontSize="16" FontFamily="SimSun" Foreground="#FF1A1C78" DockPanel.Dock="Top" HorizontalAlignment="Left" Width="290">
				
				<StackPanel Margin="8,0,17.5,7.75">
					<StackPanel Orientation="Horizontal">
						<TextBlock x:Name="___No_Name_" TextWrapping="Wrap" Text="Brand:" Width="70" VerticalAlignment="Center" FontSize="12" Height="13.6866666666667"/>
						<TextBox x:Name="txt_Brand" TextWrapping="Wrap" Text="Please enter brand name...." Width="177" VerticalAlignment="Center" SelectionOpacity="64.4" BorderBrush="{x:Null}" Foreground="#FFDA1919" FontSize="12" Height="15.687" GotFocus="txt_Brand_GotFocus" LostFocus="txt_Brand_LostFocus" TextChanged="txt_Brand_TextChanged">
							<TextBox.Background>
								<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
									<GradientStop x:Name="G1" Color="#FFFFD6D6"/>
									<GradientStop x:Name="G2" Color="#FF1A1C78" Offset="1"/>
								</LinearGradientBrush>
							</TextBox.Background>
							<TextBox.Triggers>
								<EventTrigger RoutedEvent="FrameworkElement.Loaded">
									<BeginStoryboard>
										<Storyboard x:Name="sb1" RepeatBehavior="Forever" AutoReverse="True">
											<ColorAnimation Storyboard.TargetName="G1" Storyboard.TargetProperty="Color" To="#FF1A1C78" Duration="0:0:1" />
											<ColorAnimation Storyboard.TargetName="G2" Storyboard.TargetProperty="Color" To="#FFFFD6D6" Duration="0:0:1" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
							</TextBox.Triggers>					
						</TextBox>
					</StackPanel>
					<StackPanel Orientation="Horizontal" d:LayoutOverrides="VerticalAlignment">
						<TextBlock TextWrapping="Wrap" Text="Model/Type:" Width="70" VerticalAlignment="Center" FontSize="12" Height="13.6866666666667"/>
						<TextBox x:Name="txt_Model" TextWrapping="Wrap" Text="Please enter model...." Width="177" VerticalAlignment="Center" FontSize="12" Height="15.6866666666667" BorderBrush="{x:Null}" GotFocus="txt_Model_GotFocus" LostFocus="txt_Model_LostFocus" TextChanged="txt_Model_TextChanged" Foreground="#FFDA1919">
							<TextBox.Background>
								<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
									<GradientStop x:Name="G3" Color="#FFFFD6D6"/>
									<GradientStop x:Name="G4" Color="#FF1A1C78" Offset="1"/>
								</LinearGradientBrush>
							</TextBox.Background>
							<TextBox.Triggers>
								<EventTrigger RoutedEvent="FrameworkElement.Loaded">
									<BeginStoryboard>
										<Storyboard RepeatBehavior="Forever" AutoReverse="True">
											<ColorAnimation Storyboard.TargetName="G3" Storyboard.TargetProperty="Color" To="#FF1A1C78" Duration="0:0:1" />
											<ColorAnimation Storyboard.TargetName="G4" Storyboard.TargetProperty="Color" To="#FFFFD6D6" Duration="0:0:1" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
							</TextBox.Triggers>			
						</TextBox>
					</StackPanel>
					<StackPanel Orientation="Horizontal" d:LayoutOverrides="VerticalAlignment">
						<TextBlock TextWrapping="Wrap" Text="Serial no." Width="70" VerticalAlignment="Center" Height="13.6866666666667" FontSize="12"/>
						<TextBox x:Name="txt_Serial" TextWrapping="Wrap" Text="Please enter serial no...." Width="177" Height="15.686" VerticalAlignment="Center" FontSize="12" BorderBrush="{x:Null}" GotFocus="txt_Serial_GotFocus" LostFocus="txt_Serial_LostFocus" TextChanged="txt_Serial_TextChanged" Foreground="#FFDA1919">
							<TextBox.Background>
								<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
									<GradientStop x:Name="G5" Color="#FFFFD6D6"/>
									<GradientStop x:Name="G6" Color="#FF1A1C78" Offset="1"/>
								</LinearGradientBrush>
							</TextBox.Background>
							<TextBox.Triggers>
								<EventTrigger RoutedEvent="FrameworkElement.Loaded">
									<BeginStoryboard>
										<Storyboard RepeatBehavior="Forever" AutoReverse="True">
											<ColorAnimation Storyboard.TargetName="G5" Storyboard.TargetProperty="Color" To="#FF1A1C78" Duration="0:0:1" />
											<ColorAnimation Storyboard.TargetName="G6" Storyboard.TargetProperty="Color" To="#FFFFD6D6" Duration="0:0:1" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
							</TextBox.Triggers>			
						</TextBox>
					</StackPanel>
					<StackPanel Orientation="Horizontal" d:LayoutOverrides="VerticalAlignment">
						<TextBlock TextWrapping="Wrap" Text="Price:" Width="70" VerticalAlignment="Center" FontSize="12"/>
						<TextBox x:Name="txt_Price" TextWrapping="Wrap" Text="Please enter price..." Width="177" VerticalAlignment="Center" FontSize="12" Height="15.6866666666667" BorderBrush="{x:Null}" GotFocus="txt_Price_GotFocus" LostFocus="txt_Price_LostFocus" TextChanged="txt_Price_TextChanged" Foreground="#FFDA1919">
							<TextBox.Background>
								<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
									<GradientStop x:Name="G7" Color="#FFFFD6D6"/>
									<GradientStop x:Name="G8" Color="#FF1A1C78" Offset="1"/>
								</LinearGradientBrush>
							</TextBox.Background>
							<TextBox.Triggers>
								<EventTrigger RoutedEvent="FrameworkElement.Loaded">
									<BeginStoryboard>
										<Storyboard RepeatBehavior="Forever" AutoReverse="True">
											<ColorAnimation Storyboard.TargetName="G7" Storyboard.TargetProperty="Color" To="#FF1A1C78" Duration="0:0:1" />
											<ColorAnimation Storyboard.TargetName="G8" Storyboard.TargetProperty="Color" To="#FFFFD6D6" Duration="0:0:1" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
							</TextBox.Triggers>			
						</TextBox>
					</StackPanel>
					<StackPanel Orientation="Horizontal" d:LayoutOverrides="VerticalAlignment">
						<TextBlock TextWrapping="Wrap" Text="Color:" Width="70" VerticalAlignment="Center" Height="13.6866666666667" FontSize="12"/>
						<TextBox x:Name="txt_Color" TextWrapping="Wrap" Text="Please enter color...." Width="177" VerticalAlignment="Center" FontSize="12" Height="15.686" BorderBrush="{x:Null}" GotFocus="txt_Color_GotFocus" LostFocus="txt_Color_LostFocus" TextChanged="txt_Color_TextChanged" Foreground="#FFDA1919">
							<TextBox.Background>
								<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
									<GradientStop x:Name="G9" Color="#FFFFD6D6"/>
									<GradientStop x:Name="G10" Color="#FF1A1C78" Offset="1"/>
								</LinearGradientBrush>
							</TextBox.Background>
							<TextBox.Triggers>
								<EventTrigger RoutedEvent="FrameworkElement.Loaded">
									<BeginStoryboard>
										<Storyboard RepeatBehavior="Forever" AutoReverse="True">
											<ColorAnimation Storyboard.TargetName="G9" Storyboard.TargetProperty="Color" To="#FF1A1C78" Duration="0:0:1" />
											<ColorAnimation Storyboard.TargetName="G10" Storyboard.TargetProperty="Color" To="#FFFFD6D6" Duration="0:0:1" />
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
							</TextBox.Triggers>			
						</TextBox>
					</StackPanel>
				</StackPanel>
				
			</GroupBox>
			<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="8,0">
				<Canvas x:Name="can_Show" Width="77" Height="29" VerticalAlignment="Bottom" Margin="0" MouseEnter="can_Show_MouseEnter" MouseLeave="can_Show_MouseLeave" Cursor="Hand" MouseDown="can_Show_MouseDown">
					<Rectangle x:Name="_base" Height="29" Stroke="#FFB21D1D" StrokeThickness="0" RadiusX="24" RadiusY="18" Fill="#FF1A1C78" Width="77"/>
					<Rectangle x:Name="glow" Height="29" Stroke="#FFB21D1D" StrokeThickness="0" RadiusX="24" RadiusY="18" Width="77" Opacity="0">
						<Rectangle.Fill>
							<RadialGradientBrush RadiusY="0.526" GradientOrigin="0.455,1.077" Center="0.494,0.84" RadiusX="0.586">
								<GradientStop Color="#FFC3D3E2"/>
								<GradientStop Offset="1" Color="#00CAB904"/>
							</RadialGradientBrush>
						</Rectangle.Fill>
					</Rectangle>
					<Rectangle x:Name="glass" Height="29" Stroke="#FFB21D1D" StrokeThickness="0" RadiusX="24" RadiusY="18" Width="77" Opacity="0.795">
						<Rectangle.Fill>
							<LinearGradientBrush EndPoint="0.489,-0.231" MappingMode="RelativeToBoundingBox" StartPoint="0.489,1.07">
								<GradientStop Color="#00000000" Offset="0"/>
								<GradientStop Color="White" Offset="1"/>
								<GradientStop Color="#9B9B9B9B" Offset="0.675"/>
								<GradientStop Color="#1B1B1B1B" Offset="0.543"/>
							</LinearGradientBrush>
						</Rectangle.Fill>
					</Rectangle>
					<TextBlock TextWrapping="Wrap" Width="39" Height="21" RenderTransformOrigin="0.846,0.482" Canvas.Left="19" Canvas.Top="8" TextAlignment="Center" Foreground="White"><Run Language="en-za" Text="Show"/><LineBreak/><Run Language="en-za"/></TextBlock>
				</Canvas>
				<Canvas x:Name="can_Delete" ToolTipService.ToolTip="Return to login" Width="77" Height="29" VerticalAlignment="Bottom" Margin="0" MouseEnter="can_Delete_MouseEnter" MouseLeave="can_Delete_MouseLeave" Cursor="Hand" MouseDown="can_Delete_MouseDown" ToolTip="">
					<Rectangle x:Name="_base1" Height="29" Stroke="#FFB21D1D" StrokeThickness="0" RadiusX="24" RadiusY="18" Fill="#FF1A1C78" Width="77"/>
					<Rectangle x:Name="glow1" Height="29" Stroke="#FFB21D1D" StrokeThickness="0" RadiusX="24" RadiusY="18" Width="77" Opacity="0">
						<Rectangle.Fill>
							<RadialGradientBrush RadiusY="0.526" GradientOrigin="0.455,1.077" Center="0.494,0.84" RadiusX="0.586">
								<GradientStop Color="#FFC3D3E2"/>
								<GradientStop Offset="1" Color="#00CAB904"/>
							</RadialGradientBrush>
						</Rectangle.Fill>
					</Rectangle>
					<Rectangle x:Name="glass1" Height="29" Stroke="#FFB21D1D" StrokeThickness="0" RadiusX="24" RadiusY="18" Width="77" Opacity="0.795">
						<Rectangle.Fill>
							<LinearGradientBrush EndPoint="0.489,-0.231" MappingMode="RelativeToBoundingBox" StartPoint="0.489,1.07">
								<GradientStop Color="#00000000" Offset="0"/>
								<GradientStop Color="White" Offset="1"/>
								<GradientStop Color="#9B9B9B9B" Offset="0.675"/>
								<GradientStop Color="#1B1B1B1B" Offset="0.543"/>
							</LinearGradientBrush>
						</Rectangle.Fill>
					</Rectangle>
					<TextBlock TextWrapping="Wrap" Width="39" Height="21" RenderTransformOrigin="0.846,0.482" Canvas.Left="19" Canvas.Top="8" TextAlignment="Center" Foreground="White"><Run Language="en-za" Text="Delete"/></TextBlock>
				</Canvas>
                <Canvas x:Name="can_WareHouse" ToolTipService.ToolTip="Return to login" Width="77" Height="29" VerticalAlignment="Bottom" Margin="0" MouseEnter="can_WareHouse_MouseEnter" MouseLeave="can_WareHouse_MouseLeave" Cursor="Hand" MouseDown="can_WareHouse_MouseDown" ToolTip="">
                    <Rectangle x:Name="_base2" Height="29" Stroke="#FFB21D1D" StrokeThickness="0" RadiusX="24" RadiusY="18" Fill="#FF1A1C78" Width="77"/>
                    <Rectangle x:Name="glow2" Height="29" Stroke="#FFB21D1D" StrokeThickness="0" RadiusX="24" RadiusY="18" Width="77" Opacity="0">
                        <Rectangle.Fill>
                            <RadialGradientBrush RadiusY="0.526" GradientOrigin="0.455,1.077" Center="0.494,0.84" RadiusX="0.586">
                                <GradientStop Color="#FFC3D3E2"/>
                                <GradientStop Offset="1" Color="#00CAB904"/>
                            </RadialGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle x:Name="glass2" Height="29" Stroke="#FFB21D1D" StrokeThickness="0" RadiusX="24" RadiusY="18" Width="77" Opacity="0.795">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0.489,-0.231" MappingMode="RelativeToBoundingBox" StartPoint="0.489,1.07">
                                <GradientStop Color="#00000000" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                                <GradientStop Color="#9B9B9B9B" Offset="0.675"/>
                                <GradientStop Color="#1B1B1B1B" Offset="0.543"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock TextWrapping="Wrap" Width="77" Height="21" RenderTransformOrigin="0.846,0.482" Canvas.Top="8" TextAlignment="Center" Text="Warehouse" Foreground="White"/>
                </Canvas>
            </StackPanel>
		</DockPanel>
	</Grid>
</Page>